
<%- include("header")%>
<link rel="stylesheet" href="./stylesheets/style1.css">
<link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
<style>
    body{
        width: 100%;
        height: 100%;
        background-color: #a78fe33d ;
    }
    .df{
    display: flex;
    align-items: center;
    justify-content: center;
    

}
.slider-container{
   display: flex;
   align-items: center;
   justify-content: center;
    width: 60%;
    height: 60%;
    /* background-color: brown; */
    position: absolute;
    top: 27vh;
    left: 18vw;
    
}
.slider{
    position: relative;
    width: 100%;
    height: 100%;
    background-color: rgb(225, 234, 234);
    display: flex;
    overflow-x: auto;
    cursor: pointer;
    position: relative;
}
.slider::-webkit-scrollbar{
    display: none;
}
.card{
    position: relative;
    width: 100%;
    height: 100%;
    background-color: rgb(46, 41, 41);
    border-radius: 20px;
    flex-shrink: 0;
    margin-left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    
}
.card img{
   
    width: 100%;
    height: 100%;
}
.btn{
    width: 60px;
    height: 60px;
    background-color: rgba(231, 222, 222, 0.404);
    border-radius: 5px;
    position: absolute;
    top: 95%;
    transform: translateY(-50%);
    cursor: pointer;
}
.prev-btn{
    z-index: 1;
    left: 1%;
   font-size: 20px;
}
.next-btn{
    z-index: 1;
    right: 1%;
    font-size: 20px;
}

    p{ 
        position: absolute;
        color: black;
        top: 17vh;
        font-weight: 600;
        font-family: cursive;
        /* font-style: italic; */
    }
</style>

<%- include("nav.ejs")%>

<div  class="page1 df">
    <p>"Expense Manager which takes note of all your daily expenses"<br>
    SignUp to create an account -and start managing your expenses</p>      
    <div class="slider-container df">
        <div class="prev-btn btn df">
            <i class="ri-arrow-left-s-line"></i>  
        </div>
        <div class="next-btn btn df">
            <i class="ri-arrow-right-s-line"></i>
        </div>

        <div class="slider">
            <div class="card">
                <img src="https://images.pexels.com/photos/5466785/pexels-photo-5466785.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" alt="">
                
            </div>
             <div class="card">
                <img src="https://images.pexels.com/photos/6694543/pexels-photo-6694543.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load"
                alt="">
            
            </div>
             <div class="card">
                <img src="https://images.pexels.com/photos/4430247/pexels-photo-4430247.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load"
                
                alt="">
            </div>
          
<%- include("footer")%>

<script>
    var prevBtn = document.querySelector('.prev-btn ');
var nextBtn = document.querySelector('.next-btn ');
var sliderr = document.querySelector('.slider');
var cards = document.querySelector('.card');

prevBtn.addEventListener('click', function () {
	
	var cardkiWidth = cards.clientWidth;


	
	sliderr.scrollBy({
		left: -cardkiWidth,
		behavior: 'smooth',
	});
});

nextBtn.addEventListener('click', function () {
	
	var cardkiWidth = cards.clientWidth;

	
	console.log(cardkiWidth);
	
	sliderr.scrollBy({
		left: +cardkiWidth,
		behavior: 'smooth',
	});
});



      
</script>